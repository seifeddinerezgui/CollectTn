      <ImageView fx:id="imgview" fitHeight="175.0" fitWidth="192.0" layoutX="957.0" layoutY="48.0" pickOnBounds="true" preserveRatio="true" />
      <Button fx:id="qr_code" layoutX="1012.0" layoutY="472.0" mnemonicParsing="false" onAction="#generateQRCode" text="QR CODE" />
      <ImageView fx:id="qrimg" fitHeight="150.0" fitWidth="200.0" layoutX="957.0" layoutY="311.0" pickOnBounds="true" preserveRatio="true" />
